<%- include('partials/header', { pageTitle: 'Sign In ‚Äî MovieSearch' }) %>

    <main class="main auth-page">
        <div class="auth-container">
            <div class="auth-card">
                <div class="auth-header">
                    <span class="auth-icon">üîê</span>
                    <h1>Welcome Back</h1>
                    <p>Sign in to your account</p>
                </div>

                <% if (error) { %>
                    <div class="alert alert-error">
                        <span>‚ö†Ô∏è</span>
                        <%= error %>
